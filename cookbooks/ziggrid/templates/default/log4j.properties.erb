# Generated by Chef for <%= node[:fqdn] %>

# Set root logger level to INFO and its only appender to A1.
log4j.rootLogger=INFO, console, file

# We want to see more about our classes
log4j.logger.com.gmmapowell=DEBUG
log4j.logger.org.ziniki=DEBUG

# console is set to be a ConsoleAppender.
log4j.appender.console=org.apache.log4j.ConsoleAppender

# console uses Log4JHttpLayout.
log4j.appender.console.layout=org.ziggrid.utils.http.Log4JHttpLayout
log4j.appender.console.target=System.err

log4j.appender.file=org.apache.log4j.RollingFileAppender
log4j.appender.file.File= <%= @logFile %>
log4j.appender.file.layout=org.ziggrid.utils.http.Log4JHttpLayout
log4j.appender.file.MaxFileSize=40MB
log4j.appender.file.MaxBackupIndex=20
log4j.appender.file.append=true